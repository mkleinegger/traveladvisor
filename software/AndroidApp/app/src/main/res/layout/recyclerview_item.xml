<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/single_location_cardview"
    android:layout_width="match_parent"
    android:layout_height="190dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview_branchen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:ellipsize="end"
                android:gravity="left"
                android:maxLines="1"
                tools:text="Men's Club" />

            <TextView
                android:id="@+id/textview_punkte"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="right"
                tools:text="30 Punkte" />
        </LinearLayout>

        <TextView
            android:id="@+id/textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Sanraku" />

        <TextView
            android:id="@+id/textview_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:gravity="center"
            android:lineSpacingExtra="2.5dp"
            android:maxLines="2"
            tools:text="Delicious meal. Great ambiance with interesting guests. The best dinner we had during our stay in San Francisco. You can bring your own wine as long as you pay a corkage fee. Highly recommended." />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_start_navigation"
            style="@style/MyButtonColorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start navigation" />
    </LinearLayout>
</androidx.cardview.widget.CardView>